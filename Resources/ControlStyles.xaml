        </Setter>
    </Style>
    
    <!--ListView style-->

    <Style x:Key="ListViewStyle" TargetType="{x:Type ListView}">
        <Setter Property="Background" Value="#282828"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SelectionMode" Value="Single"/>


    </Style>

    <Style x:Key="ListViewItemStyle" TargetType="{x:Type ListViewItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="25"/>

       
    </Style>

    <!--Combo box style-->

    <Style x:Key="ComboStyle" TargetType="{x:Type ComboBox}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="OpacityMask" Value="AliceBlue"/>
    </Style>

    <Style x:Key="ComboItemStyle" TargetType="{x:Type ComboBoxItem}">
        <Setter Property="Background" Value="#282828"/>
        <Setter Property="Foreground" Value="Beige"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        
    </Style>

    <!--General text box style-->

    <Style x:Key="TextboxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="LightGray"/>
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>

    </Style>
    
    <!--Menu style-->

    <Style x:Key="MenuStyle" TargetType="{x:Type Menu}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="25"/>
        

    </Style>

    
    <Style x:Key="MenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="#282828"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="auto"/>
        <Setter Property="BorderBrush" Value="#282828"/>
       

    </Style>

    <!--General label style-->

    <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Beige"/>
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <!--Radio button style-->
    <Style x:Key="RadioStyle" TargetType="{x:Type RadioButton}">
  
        <Setter Property="Foreground" Value="Beige"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Visibility" Value="Visible"/>

       
    </Style>
    
    <!--Memory style-->
    <Style x:Key="MemoStyle" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="#282828"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!--Histroy style-->
    <Style x:Key="HistStyle" TargetType="{x:Type RichTextBox}">
        <Setter Property="Background" Value="#282828"/>
        <Setter Property="Foreground" Value="Beige"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="Padding" Value="30"/> 
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>
    
    <!--DataGrid style-->
    <Style x:Key="Dataviewstyle" TargetType="DataGrid">
        <Setter Property="Background" Value="#282828"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="CanUserResizeColumns" Value="True"/>
        <Setter Property="CanUserResizeRows" Value="True"/>
        <Setter Property="CanUserSortColumns" Value="True"/>
        <Setter Property="ColumnHeaderHeight" Value="35"/>
        <Setter Property="ColumnWidth" Value="auto"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalGridLinesBrush" Value="LightGray"/>
        <Setter Property="VerticalGridLinesBrush" Value="LightGray"/>
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        
    </Style>
  
</ResourceDictionary>